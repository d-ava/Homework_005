<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_180"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/birds"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tVUserInfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputHeight"
        android:layout_margin="@dimen/margin"
        android:background="@drawable/edit_text_shape"
        android:gravity="center"
        android:padding="15dp"



        android:paddingStart="@dimen/textPadding"
        android:textAlignment="center"
        android:textColor="@color/orange"
        android:text="@string/user_information"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tVemailInfo"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tVemailInfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputHeight"
        android:layout_margin="@dimen/margin"
        android:background="@drawable/button_shape"
        android:gravity="center"
        android:padding="15dp"

        android:paddingStart="@dimen/textPadding"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tVPasswordInfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputHeight"
        android:layout_margin="@dimen/margin"
        android:background="@drawable/button_shape"
        android:gravity="center"
        android:padding="15dp"


        android:paddingStart="@dimen/textPadding"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tVemailInfo"
        app:layout_constraintVertical_bias="0"


        tools:ignore="RtlSymmetry" />


</androidx.constraintlayout.widget.ConstraintLayout>